pipeline {
    agent any
    environment {
        TAG              = "3.0.${BUILD_NUMBER}"
        AWS_REGION       = "eu-west-2"
    }

    parameters {
        choice(
            description: 'Deploy to Jobs or to Community?',
            name: 'environment',
            choices: ['jobs', 'community']
             )
    }

    stages {

         stage('Deploy Jobs') {
            when {
            not { branch 'master'}
               expression { params.environment == 'jobs' }
            }
            steps {
                withAWS(region: env.AWS_REGION) {
                   sh "echo jobs"
                }
            }
        }


        stage('Deploy Community') {
            when {
                not { branch 'master' }
                expression { params.environment == 'community' }
                        }
            steps {
                withAWS(region: env.AWS_REGION) {
                     sh "echo community"
                }
            }
        }
        stage('TEST MASTER') {
            when {
                expression { params.environment == 'community' }
                branch 'master'
                        }
            steps {
                withAWS(region: env.AWS_REGION) {
                     sh "echo MASTER"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}