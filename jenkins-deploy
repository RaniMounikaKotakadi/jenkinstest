pipeline {
    agent any
    environment {
        TAG              = "3.0.${BUILD_NUMBER}"
        AWS_REGION       = "eu-west-2"
        BRANCH           = "$(echo $GIT_BRANCH | sed -e 's/-//g' | sed -e 's/origin//g' | cut -c2-50)"
    }

    parameters {
        choice(
            description: 'Deploy to Jobs or to Community?',
            name: 'environment',
            choices: ['jobs', 'community']
             )
    }

    stages {

         stage('Deploy Jobs') {
            when {
               expression { params.environment == 'jobs' }
            }
            steps {
                if ( master =! "$branch"){
                withAWS(region: env.AWS_REGION) {
                   sh "echo jobs"
                }
                }
                else {
                   echo "Its master branch"
                }
            }
        }


        stage('Deploy Community') {
            when {
                expression { params.environment == 'community' }
                        }
            steps {
                if ( master =! "$branch"){
                withAWS(region: env.AWS_REGION) {
                     sh "echo community"
                }
                }
                else {
                   echo "Its master branch"
                }
            }
        }
        stage('TEST MASTER') {
            when {
                expression { params.environment == 'community' }
                        }
            steps {
                if ( master == "$branch"){
                withAWS(region: env.AWS_REGION) {
                     sh "echo MASTER"
                }
                }
                 else {
                   echo "Its not master branch"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}